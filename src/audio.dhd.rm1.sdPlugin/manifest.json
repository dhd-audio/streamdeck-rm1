        {
          "Image": "actions/pflonoff/assets/pfl-inactive",
          "Name": "off"
        }
      ],
      "Tooltip": "Switch PFL On or Off",
      "UUID": "audio.dhd.rm1.pflonoff",
      "PropertyInspectorPath": "common/btn-PI/inspector.html"
    },
    {
      "Icon": "actions/encoder/assets/channel",
      "Name": "Channel",
      "Controllers": [
        "Encoder"
      ],
      "DisableAutomaticStates": true,
      "States": [
        {
          "Image": "actions/encoder/assets/channel",
          "Name": "Encoder"
        }
      ],
      "Encoder": {
        "Icon": "actions/encoder/assets/channel",
        "layout": "$B1",
        "TriggerDescription": {
          "Rotate": "Change the volume"
        }
      },
      "Tooltip": "Set channel encoder",
      "UUID": "audio.dhd.rm1.channel",
      "PropertyInspectorPath": "common/btn-PI/inspector.html"
    },
    {
