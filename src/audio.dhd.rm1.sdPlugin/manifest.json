{
  "SDKVersion": 2,
  "Author": "DHD audio GmbH",
  "CodePath": "app.html",
  "Description": "Control your RM1 with Stream Deck",
  "Name": "RM1 Control",
  "Icon": "assets/manifest",
  "URL": "https://rm1.audio/",
  "Version": "1.0.0",
  "Software": {
    "MinimumVersion": "5.0"
  },
  "OS": [
    {
      "Platform": "mac",
      "MinimumVersion": "10.11"
    },
    {
      "Platform": "windows",
      "MinimumVersion": "10"
    }
  ],
  "Category": "RM1 Control",
  "CategoryIcon": "assets/manifest",
  "Actions": [
    {
      "Icon": "actions/btnonoff/assets/onoff-action-icon",
      "Name": "Channel On / Off",
      "Controllers": [
        "Keypad"
      ],
      "DisableAutomaticStates": true,
      "States": [
        {
          "Image": "actions/btnonoff/assets/On-active",
          "Name": "on"
        },
        {
          "Image": "actions/btnonoff/assets/On-inactive",
          "Name": "off"
        }
      ],
      "Tooltip": "Switch Inputs On or Off",
      "UUID": "audio.dhd.rm1.btnonoff",
      "PropertyInspectorPath": "common/btn-PI/inspector.html"
    },
    {
      "Icon": "actions/btnonoff/assets/onoff-action-icon",
      "Name": "Load Channel Preset",
      "Controllers": [
        "Keypad"
      ],
      "DisableAutomaticStates": true,
      "States": [
        {
          "Image": "actions/btnonoff/assets/On-active",
          "Name": "on"
        },
        {
          "Image": "actions/btnonoff/assets/On-inactive",
          "Name": "off"
        }
      ],
      "Tooltip": "Switch Inputs On or Off",
      "UUID": "audio.dhd.rm1.loadchannelpreset",
      "PropertyInspectorPath": "common/btn-channel-preset/inspector.html"
    },
    {
      "Icon": "actions/pflonoff/assets/pfl-action-icon",
